[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[user]
[apply]
	whitespace = nowarn
[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --diff $LOCAL $REMOTE
    prompt = false
[alias]
    # Diff
	d = difftool
    dc = difftool --cached

    # Staging
    aa = add --all

    # Push
    pom = push origin master

    # Status
    ss = status -sb

    # Reset
    unstage = reset HEAD -- 
    undo = reset --soft HEAD~1
    reset = reset --hard HEAD~1
	commit = commit -S

    # Log
    log-commits = log --oneline --graph --decorate
    log-files = log --oneline --graph --decorate --name-status
    log-plain = log --pretty=format:'%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s'
