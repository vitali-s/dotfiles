[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[user]
	name = Vitali Shcharbin
	email = vitali.shcharbin@gmail.com
[apply]
	whitespace = nowarn
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
    # Diff
	d = difftool
    dc = difftool --cached

    # Staging
    aa = add --all

    # Push
    pom = push origin master

    # Status
    ss = status -sb

    # Reset
    unstage = reset HEAD -- 
    undo = reset --soft HEAD~1
    reset = reset --hard HEAD~1
